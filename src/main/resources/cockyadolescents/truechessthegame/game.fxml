<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" prefHeight="631.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cockyadolescents.truechessthegame.Game">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

         <BorderPane maxHeight="600.0" maxWidth="610.0" minHeight="600.0" minWidth="609.0" prefHeight="600.0" prefWidth="610.0">
      <center>
         <StackPane maxHeight="480.0" maxWidth="480.0" minHeight="480.0" minWidth="480.0" prefHeight="480.0" prefWidth="480.0" BorderPane.alignment="CENTER">
            <children>
               <GridPane fx:id="labelBoard" alignment="CENTER" maxHeight="480.0" maxWidth="480.0" minHeight="480.0" minWidth="480.0" prefHeight="480.0" prefWidth="480.0" />
               <Canvas fx:id="canvas" height="480.0" width="480.0" />
               <GridPane fx:id="buttonBoard" alignment="CENTER" maxHeight="480.0" maxWidth="480.0" minHeight="480.0" minWidth="480.0" prefHeight="480.0" prefWidth="480.0" StackPane.alignment="CENTER" />
               <Label fx:id="isCheckedLabel" alignment="CENTER" contentDisplay="CENTER" maxWidth="480.0" minWidth="480.0" prefHeight="60.0" prefWidth="480.0" styleClass="isChecked" text="CHECK">
                  <font>
                     <Font name="Bodoni MT" size="36.0" />
                  </font>
               </Label>
            </children>
         </StackPane>
      </center>

            <top>
         <HBox fx:id="topNumbers" alignment="BOTTOM_LEFT" maxWidth="604.0" minWidth="540.0" prefHeight="60.0" prefWidth="604.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
               <Insets />
            </BorderPane.margin>
         </HBox>
      </top>

            <left>
         <VBox fx:id="leftNumbers" alignment="TOP_CENTER" maxHeight="480.0" maxWidth="60.0" minHeight="480.0" minWidth="60.0" prefHeight="480.0" prefWidth="60.0" BorderPane.alignment="CENTER" />
      </left>
      <right>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="60.0" BorderPane.alignment="CENTER">
            <children>
               <Label fx:id="blackTimer" text="10:00">
                  <VBox.margin>
                     <Insets bottom="80.0" />
                  </VBox.margin>
               </Label>
               <VBox fx:id="promotionBar" prefHeight="270.0" prefWidth="100.0">
                  <children>
                     <Button fx:id="Queen" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" stylesheets="@style.css" text="♛" textFill="#e8b81b">
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                        <font>
                           <Font size="24.0" />
                        </font>
                     </Button>
                     <Button fx:id="Rook" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" stylesheets="@style.css" text="♜" textFill="#e8b81b">
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                        <font>
                           <Font size="24.0" />
                        </font>
                     </Button>
                     <Button fx:id="Bishop" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" stylesheets="@style.css" text="♝" textFill="#e8b81b">
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                        <font>
                           <Font size="24.0" />
                        </font>
                     </Button>
                     <Button fx:id="Knight" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" stylesheets="@style.css" text="♞" textFill="#e8b81b">
                        <font>
                           <Font size="24.0" />
                        </font>
                     </Button>
                  </children>
               </VBox>
               <Label fx:id="whiteTimer" text="10:00">
                  <VBox.margin>
                     <Insets top="80.0" />
                  </VBox.margin>
               </Label>
            </children>
            <BorderPane.margin>
               <Insets left="10.0" />
            </BorderPane.margin>
         </VBox>
      </right>
      <bottom>
         <ProgressBar fx:id="progressBar" minHeight="20.0" prefHeight="20.0" prefWidth="480.0" progress="0.51" stylesheets="@style.css" BorderPane.alignment="CENTER">
            <BorderPane.margin>
               <Insets bottom="20.0" top="20.0" />
            </BorderPane.margin>
         </ProgressBar>
      </bottom>
   </BorderPane>

   <HBox alignment="CENTER" spacing="5.0">
      <Button fx:id="home" onAction="#home" text="Home" />
      <Button fx:id="newgame" onAction="#newGame" text="Start New Game" />
      <ToggleButton fx:id="turnBoardOn" mnemonicParsing="false" onAction="#turnBoardOn" text="Turn On Board Feature" />
      <ToggleButton fx:id="turnBoxingOn" mnemonicParsing="false" onAction="#turnBoxingOn" text="Turn Off Boxing Feature" />
   </HBox>
</VBox>
