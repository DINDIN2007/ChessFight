<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" prefHeight="640.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cockyadolescents.truechessthegame.Game">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <BorderPane maxHeight="600.0" maxWidth="610.0" minHeight="600.0" minWidth="609.0" prefHeight="600.0" prefWidth="610.0">
      <center>
         <StackPane maxHeight="480.0" maxWidth="480.0" minHeight="480.0" minWidth="480.0" prefHeight="480.0" prefWidth="480.0" BorderPane.alignment="CENTER">
            <children>
               <GridPane fx:id="labelBoard" alignment="CENTER" maxHeight="480.0" maxWidth="480.0" minHeight="480.0" minWidth="480.0" prefHeight="480.0" prefWidth="480.0" />
               <Canvas fx:id="canvas" height="480.0" width="480.0" />
               <GridPane fx:id="buttonBoard" alignment="CENTER" maxHeight="480.0" maxWidth="480.0" minHeight="480.0" minWidth="480.0" prefHeight="480.0" prefWidth="480.0" />
            </children>
         </StackPane>
      </center>

      <top>
         <HBox fx:id="topNumbers" maxWidth="604.0" minWidth="540.0" prefHeight="60.0" prefWidth="604.0" BorderPane.alignment="CENTER" />
      </top>

      <left>
         <VBox fx:id="leftNumbers" maxHeight="480.0" maxWidth="60.0" minHeight="480.0" minWidth="60.0" prefHeight="480.0" prefWidth="60.0" BorderPane.alignment="CENTER" />
      </left>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <bottom>
         <Label fx:id="isCheckedLabel" prefHeight="60.0" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
               <Font name="Bodoni MT" size="36.0" />
            </font>
         </Label>
      </bottom>
      <right>
         <VBox fx:id="promotionBar" alignment="CENTER" prefHeight="200.0" prefWidth="60.0" BorderPane.alignment="CENTER">
            <children>
               <Button fx:id="Queen" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" stylesheets="@style.css" text="♛" textFill="#e8b81b">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
                  <font>
                     <Font size="24.0" />
                  </font>
               </Button>
               <Button fx:id="Rook" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" stylesheets="@style.css" text="♜" textFill="#e8b81b">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
                  <font>
                     <Font size="24.0" />
                  </font>
               </Button>
               <Button fx:id="Bishop" layoutX="10.0" layoutY="80.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" stylesheets="@style.css" text="♝" textFill="#e8b81b">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
                  <font>
                     <Font size="24.0" />
                  </font>
               </Button>
               <Button fx:id="Knight" layoutX="10.0" layoutY="150.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" stylesheets="@style.css" text="♞" textFill="#e8b81b">
                  <font>
                     <Font size="24.0" />
                  </font>
               </Button>
            </children>
            <BorderPane.margin>
               <Insets left="10.0" />
            </BorderPane.margin>
         </VBox>
      </right>
   </BorderPane>
   <ToggleButton fx:id="turnBoardOn" mnemonicParsing="false" onAction="#turnBoardOn" text="Turn On Board Feature" />
</VBox>
