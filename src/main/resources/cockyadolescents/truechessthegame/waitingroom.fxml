<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cockyadolescents.truechessthegame.WaitingRoom">
   <VBox alignment="CENTER" prefHeight="640.0" prefWidth="800.0">

      <Label fx:id="welcomeText" text="Play Online" textAlignment="CENTER">
         <font>
            <Font name="Bell MT" size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>

      <HBox alignment="CENTER" prefHeight="25.0" prefWidth="200.0">
         <Label text="Join an Online Game :">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </Label>
         <TextField fx:id="addressField" promptText="Enter Address" />
         <Button fx:id="joinServer" onAction="#joinServer" mnemonicParsing="false" text="Join" />
      </HBox>

      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <Label text="Host an Online Game : ">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </Label>
         <Button fx:id="hostServer" onAction="#hostServer" mnemonicParsing="false" text="Get Host Address" />
      </HBox>

      <Label fx:id="addressLabel">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <Button fx:id="home" onAction="#home" text="Go back to Homepage">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </VBox>
</AnchorPane>
