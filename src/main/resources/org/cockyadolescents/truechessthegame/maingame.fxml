<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" prefHeight="640.0" prefWidth="800.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.cockyadolescents.truechessthegame.MainGame">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <BorderPane maxHeight="540.0" maxWidth="540.0" minHeight="540.0" minWidth="540.0" prefHeight="540.0" prefWidth="540.0">
      <center>
         <StackPane maxHeight="480.0" maxWidth="480.0" minHeight="480.0" minWidth="480.0" prefHeight="480.0" prefWidth="480.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane fx:id="labelBoard" alignment="TOP_CENTER" maxHeight="480.0" maxWidth="480.0" minHeight="480.0" minWidth="480.0" prefHeight="480.0" prefWidth="480.0" />
                <Canvas fx:id="canvas" height="480.0" width="480.0" />
                <GridPane fx:id="buttonBoard" alignment="TOP_CENTER" maxHeight="480.0" maxWidth="480.0" minHeight="480.0" minWidth="480.0" prefHeight="480.0" prefWidth="480.0" />
            </children>
         </StackPane>
      </center>
      <top>
         <HBox fx:id="topNumbers" maxWidth="540.0" minWidth="540.0" prefHeight="60.0" prefWidth="540.0" BorderPane.alignment="CENTER" />
      </top>
      <left>
         <VBox fx:id="leftNumbers" maxHeight="480.0" maxWidth="60.0" minHeight="480.0" minWidth="60.0" prefHeight="480.0" prefWidth="60.0" BorderPane.alignment="CENTER" />
      </left>
   </BorderPane>
</VBox>
